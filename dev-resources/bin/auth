#!/bin/bash

LCMAP_ACCEPT_HDR="Accept: application/vnd.usgs.lcmap.v0.5+json, application/problem+json"
LCMAP_HOST="http://localhost:1077"
LCMAP_USER="alice"
LCMAP_PASS="secret-bad"

AUTH=$(curl -v -s -X POST \
  -H "$LCMAP_ACCEPT_HDR" \
  -d "username=$LCMAP_USER" \
  -d "password=$LCMAP_PASS" \
  "$LCMAP_HOST/api/auth/login")

echo $AUTH
