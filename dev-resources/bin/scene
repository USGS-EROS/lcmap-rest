#!/bin/bash

LCMAP_ACCEPT_HDR="Accept: application/vnd.usgs.lcmap.v0.5+json, application/problem+json"
LCMAP_HOST="http://localhost:1077"
SCENE_ID="LE70470282002361EDC00"

SCENE=$(curl -v -s \
  -H "$LCMAP_ACCEPT_HDR" \
  -H "$LCMAP_TOKEN_HDR" \
  -X GET "$LCMAP_HOST/api/data/scenes?scene=$SCENE_ID")

echo $SCENE
